    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Name Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "./src/pipeline.py",
            "console": "integratedTerminal",
            "args": [
                "--script_path",
                "examples/kabuki1.txt",
                "--output_path",
                "output"
            ]
        }
    ]
}